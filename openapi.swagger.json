{
  "swagger": "2.0",
  "info": {
    "title": "pkg/protocol/proto/auth/auth.int.proto",
    "version": "version not set"
  },
  "tags": [
    {
      "name": "AuthIntService"
    },
    {
      "name": "UserExtService"
    }
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/api/v1/auth/login": {
      "post": {
        "summary": "登录",
        "operationId": "AuthIntService_Login",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authLoginResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authLoginRequest"
            }
          }
        ],
        "tags": [
          "AuthIntService"
        ]
      }
    },
    "/api/v1/auth/register": {
      "post": {
        "summary": "注册",
        "operationId": "AuthIntService_Register",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/authRegisterResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authRegisterRequest"
            }
          }
        ],
        "tags": [
          "AuthIntService"
        ]
      }
    },
    "/api/v1/auth/verify": {
      "post": {
        "summary": "权限校验",
        "operationId": "AuthIntService_Auth",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "type": "object",
              "properties": {}
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authAuthRequest"
            }
          }
        ],
        "tags": [
          "AuthIntService"
        ]
      }
    },
    "/api/v1/user/search": {
      "post": {
        "summary": "搜索用户",
        "operationId": "UserExtService_SearchUser",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/userSearchUserResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/userSearchUserRequest"
            }
          }
        ],
        "tags": [
          "UserExtService"
        ]
      }
    }
  },
  "definitions": {
    "authAuthRequest": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uint64"
        },
        "deviceId": {
          "type": "string",
          "format": "uint64"
        },
        "token": {
          "type": "string"
        }
      },
      "required": [
        "userId",
        "deviceId",
        "token"
      ]
    },
    "authLoginRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "title": "用户名、邮箱或手机号"
        },
        "password": {
          "type": "string",
          "title": "用户密码"
        },
        "deviceId": {
          "type": "string",
          "format": "uint64",
          "title": "设备ID"
        }
      },
      "required": [
        "username",
        "password",
        "deviceId"
      ]
    },
    "authLoginResponse": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uint64",
          "title": "用户ID"
        },
        "token": {
          "type": "string",
          "title": "登录成功后返回的JWT或其他令牌"
        },
        "expiresAt": {
          "type": "string",
          "format": "int64",
          "title": "令牌过期时间（Unix时间戳）"
        },
        "message": {
          "type": "string",
          "title": "登录结果信息（如错误原因或成功提示）"
        },
        "userInfo": {
          "$ref": "#/definitions/authUserInfo",
          "title": "用户基本信息"
        }
      },
      "required": [
        "userId",
        "token"
      ]
    },
    "authRegisterRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "title": "用户名"
        },
        "password": {
          "type": "string",
          "title": "密码"
        }
      },
      "required": [
        "username",
        "password"
      ]
    },
    "authRegisterResponse": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uint64",
          "title": "注册成功后返回的用户ID"
        },
        "message": {
          "type": "string",
          "title": "注册结果信息（如错误原因或成功提示）"
        },
        "code": {
          "type": "integer",
          "format": "int64",
          "title": "注册结果代码（如0表示成功，非0表示失败）"
        }
      }
    },
    "authUserInfo": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uint64"
        },
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        },
        "nickname": {
          "type": "string"
        },
        "avatarUrl": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "username"
      ]
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "userSearchUserRequest": {
      "type": "object",
      "properties": {
        "keyword": {
          "type": "string",
          "title": "搜索关键字，可以是用户名或手机号"
        },
        "page": {
          "type": "integer",
          "format": "int64",
          "title": "分页页码，默认从 1 开始"
        },
        "pageSize": {
          "type": "integer",
          "format": "int64",
          "title": "每页返回的用户数量，默认值为 10"
        }
      },
      "title": "搜索用户请求",
      "required": [
        "keyword"
      ]
    },
    "userSearchUserResponse": {
      "type": "object",
      "properties": {
        "users": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/userUserInfo"
          },
          "title": "搜索结果中的用户列表"
        },
        "total": {
          "type": "integer",
          "format": "int64",
          "title": "搜索结果的总用户数"
        }
      },
      "title": "搜索用户响应"
    },
    "userUserInfo": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uint64",
          "title": "用户 ID"
        },
        "username": {
          "type": "string",
          "title": "用户名"
        },
        "avatarUrl": {
          "type": "string",
          "title": "用户头像 URL"
        }
      },
      "title": "用户信息",
      "required": [
        "userId",
        "username"
      ]
    }
  }
}
