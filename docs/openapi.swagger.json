            }
          }
        },
        "parameters": [
          {
            "name": "requestId",
            "description": "申请ID",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uint64"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/FriendExtServiceHandleFriendRequestBody"
            }
          }
        ],
        "tags": [
          "FriendExtService"
        ]
      }
    },
    "/api/v1/friend/requests/received": {
      "get": {
        "summary": "获取收到的好友申请列表",
        "operationId": "FriendExtService_GetReceivedFriendRequests",
