  "definitions": {
    "FriendExtServiceHandleFriendRequestBody": {
      "type": "object",
      "properties": {
        "action": {
          "type": "integer",
          "format": "int64",
          "title": "处理动作 (1=同意, 2=拒绝, 3=忽略)"
        }
      },
      "title": "处理好友申请请求",
      "required": [
        "action"
      ]
    },
    "authAuthRequest": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string",
          "title": "仅需 token，根据 token 服务端解析身份"
        }
      },
      "required": [
        "token"
      ]
    },
    "authAuthResponse": {
      "type": "object",
      "properties": {
        "valid": {
          "type": "boolean",
          "title": "Token 是否有效"
        },
        "message": {
          "type": "string",
          "title": "验证结果信息（如错误原因或成功提示）"
        },
        "userId": {
          "type": "string",
          "format": "uint64",
          "title": "由服务端解析出的用户ID"
        },
        "deviceId": {
          "type": "string",
          "format": "uint64",
          "title": "由服务端解析出的设备ID"
        }
      }
    },
    "authLoginRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "title": "用户名、邮箱或手机号"
        },
        "password": {
          "type": "string",
          "title": "用户密码"
        },
        "deviceId": {
          "type": "string",
          "format": "uint64",
          "title": "设备ID"
        }
      },
      "required": [
        "username",
        "password",
        "deviceId"
      ]
    },
    "authLoginResponse": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uint64",
          "title": "用户ID"
        },
        "token": {
          "type": "string",
          "title": "登录成功后返回的JWT或其他令牌"
        },
        "expiresAt": {
          "type": "string",
          "format": "int64",
          "title": "令牌过期时间（Unix时间戳）"
        },
        "message": {
          "type": "string",
          "title": "登录结果信息（如错误原因或成功提示）"
        },
        "userInfo": {
          "$ref": "#/definitions/authUserInfo",
          "title": "用户基本信息"
        }
      },
      "required": [
        "userId",
        "token"
      ]
    },
    "authRegisterRequest": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "title": "用户名"
        },
        "password": {
          "type": "string",
          "title": "密码"
        }
      },
      "required": [
        "username",
        "password"
      ]
    },
    "authRegisterResponse": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uint64",
          "title": "注册成功后返回的用户ID"
        },
        "message": {
          "type": "string",
          "title": "注册结果信息（如错误原因或成功提示）"
        },
        "code": {
          "type": "integer",
          "format": "int64",
          "title": "注册结果代码（如0表示成功，非0表示失败）"
        }
      }
    },
    "authUserInfo": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uint64"
        },
        "username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        },
        "nickname": {
          "type": "string"
        },
        "avatarUrl": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "username"
      ]
    },
    "friendFriendInfo": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uint64",
          "title": "用户ID"
        },
        "friendId": {
          "type": "string",
          "format": "uint64",
          "title": "好友ID"
        },
        "remark": {
          "type": "string",
          "title": "备注名"
        },
        "categoryId": {
          "type": "string",
          "format": "uint64",
          "title": "分类ID"
        },
        "isBlocked": {
          "type": "boolean",
          "title": "是否被屏蔽"
        },
        "createdAt": {
          "type": "string",
          "format": "int64",
          "title": "添加时间"
        },
        "updatedAt": {
          "type": "string",
          "format": "int64",
          "title": "更新时间"
        },
        "friendInfo": {
          "$ref": "#/definitions/friendUserInfo",
          "title": "好友用户信息（可选）"
        }
      },
      "title": "好友信息",
      "required": [
        "userId",
        "friendId"
      ]
    },
    "friendFriendRequestInfo": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uint64",
          "title": "申请ID"
        },
        "requesterId": {
          "type": "string",
          "format": "uint64",
          "title": "申请人ID"
        },
        "recipientId": {
          "type": "string",
          "format": "uint64",
          "title": "接收人ID"
        },
        "status": {
          "type": "integer",
          "format": "int64",
          "title": "申请状态 (0=待处理, 1=已同意, 2=已拒绝, 3=已忽略)"
        },
        "message": {
          "type": "string",
          "title": "申请消息"
        },
        "createdAt": {
          "type": "string",
          "format": "int64",
          "title": "创建时间"
        },
        "updatedAt": {
          "type": "string",
          "format": "int64",
          "title": "更新时间"
        },
        "requesterInfo": {
          "$ref": "#/definitions/friendUserInfo",
          "title": "申请人信息（可选）"
        },
        "recipientInfo": {
          "$ref": "#/definitions/friendUserInfo",
          "title": "接收人信息（可选）"
        }
      },
      "title": "好友申请信息",
      "required": [
        "id",
        "requesterId",
        "recipientId"
      ]
    },
    "friendGetFriendListResponse": {
      "type": "object",
      "properties": {
        "friends": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/friendFriendInfo"
          },
          "title": "好友列表"
        },
        "total": {
          "type": "integer",
          "format": "int64",
          "title": "总数量"
        }
      },
      "title": "获取好友列表响应"
    },
    "friendGetReceivedFriendRequestsResponse": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/friendFriendRequestInfo"
          },
          "title": "申请列表"
        },
        "total": {
          "type": "integer",
          "format": "int64",
          "title": "总数量"
        }
      },
      "title": "获取收到的好友申请列表响应"
    },
    "friendGetSentFriendRequestsResponse": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/friendFriendRequestInfo"
          },
          "title": "申请列表"
        },
        "total": {
          "type": "integer",
          "format": "int64",
          "title": "总数量"
        }
      },
      "title": "获取发送的好友申请列表响应"
    },
    "friendHandleFriendRequestResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "title": "结果消息"
        }
      },
      "title": "处理好友申请响应"
    },
    "friendSendFriendRequestRequest": {
      "type": "object",
      "properties": {
        "recipientId": {
          "type": "string",
          "format": "uint64",
          "title": "接收方用户ID"
        },
        "message": {
          "type": "string",
          "title": "申请消息"
        }
      },
      "title": "发送好友申请请求",
      "required": [
        "recipientId"
      ]
    },
    "friendSendFriendRequestResponse": {
      "type": "object",
      "properties": {
        "requestId": {
          "type": "string",
          "format": "uint64",
          "title": "申请ID"
        },
        "message": {
          "type": "string",
          "title": "结果消息"
        }
      },
      "title": "发送好友申请响应"
    },
    "friendUserInfo": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uint64",
          "title": "用户 ID"
        },
        "username": {
          "type": "string",
          "title": "用户名"
        },
        "avatarUrl": {
          "type": "string",
          "title": "用户头像 URL"
        },
        "nickname": {
          "type": "string",
          "title": "昵称"
        }
      },
      "title": "用户基本信息",
      "required": [
        "userId",
        "username"
      ]
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "userSearchUserRequest": {
      "type": "object",
      "properties": {
        "keyword": {
          "type": "string",
          "title": "搜索关键字，可以是用户名或手机号"
        },
        "page": {
          "type": "integer",
          "format": "int64",
          "title": "分页页码，默认从 1 开始"
        },
        "pageSize": {
          "type": "integer",
          "format": "int64",
          "title": "每页返回的用户数量，默认值为 10"
        }
      },
      "title": "搜索用户请求",
      "required": [
        "keyword"
      ]
    },
    "userSearchUserResponse": {
      "type": "object",
      "properties": {
        "users": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/userUserInfo"
          },
          "title": "搜索结果中的用户列表"
        },
        "total": {
          "type": "integer",
          "format": "int64",
          "title": "搜索结果的总用户数"
        }
      },
      "title": "搜索用户响应"
    },
    "userUserInfo": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "format": "uint64",
          "title": "用户 ID"
        },
        "username": {
          "type": "string",
          "title": "用户名"
        },
        "avatarUrl": {
          "type": "string",
          "title": "用户头像 URL"
        }
      },
      "title": "用户信息",
      "required": [
        "userId",
        "username"
      ]
    }
  }
}
