            "format": "int64"
          },
          {
            "name": "categoryId",
            "description": "分类ID过滤，不传则返回所有分类",
            "in": "query",
            "required": false,
            "type": "string",
            "format": "uint64"
          }
        ],
        "tags": [
          "FriendExtService"
        ]
      }
    },
    "/api/v1/friend/request": {
      "post": {
        "summary": "发送好友申请",
        "operationId": "FriendExtService_SendFriendRequest",
        "responses": {
          "200": {
