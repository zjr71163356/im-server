        ]
      }
    },
    "/api/v1/friend/request/{requestId}": {
      "put": {
        "summary": "处理好友申请（同意/拒绝/忽略）",
        "operationId": "FriendExtService_HandleFriendRequest",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
