            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/authAuthRequest"
            }
          }
        ],
        "tags": [
          "AuthIntService"
        ]
      }
    },
    "/api/v1/friend/list": {
      "get": {
        "summary": "获取好友列表",
        "operationId": "FriendExtService_GetFriendList",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/friendGetFriendListResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "page",
            "description": "分页页码，默认从 1 开始",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int64"
          },
          {
            "name": "pageSize",
            "description": "每页返回的好友数量，默认值为 10",
