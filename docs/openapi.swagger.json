          {
            "name": "status",
            "description": "申请状态过滤 (0=待处理, 1=已同意, 2=已拒绝, 3=已忽略)，不传则返回所有状态",
            "in": "query",
            "required": false,
            "type": "integer",
            "format": "int64"
          }
        ],
        "tags": [
          "FriendExtService"
        ]
      }
    },
    "/api/v1/friend/requests/sent": {
      "get": {
        "summary": "获取发送的好友申请列表",
